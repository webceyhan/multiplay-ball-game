{
    "compilerOptions": {
        "outDir": "./dist",
        "rootDir": "./src",
        "target": "esnext",
        "useDefineForClassFields": true,
        "module": "CommonJS",
        "moduleResolution": "node",
        "strict": true,
        "sourceMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "lib": ["esnext", "dom"]
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
}
